{# DEPENDING ON social variable #}

{% if social.twitter %}
	<li class="social">
		<a target="_blank" href="{{ social.twitter }}" title="{{ 'twitter' | lang }}">
			<i class="icon" aria-hidden="true">{{ icon('fontawesome', 'x-twitter', 18) }}</i>
			<span>Twitter</span>
		</a>
	</li>
{% endif %}
