<!DOCTYPE html>
<html lang="{{ _lang.code }}" dir="{{ _lang.direction }}">
<head>

  <style>
    :root {
      --base-font-family: {{ _config.fonts.base_font_family | raw }};
      --base-font-size: {{ _config.size }}px;
      --base-font-style: {{ _config.style }};
      --base-font-weight: {{ _config.weight }};
      --base-line-height: {{ _config.line_height }};
      --border-thickness: {{ _config.border_thickness }}px;
      --blockqoute-border-thickness: {{ _config.blockqoute_border_thickness }}px;
      --aspect-ratio: {{ _config.settings.loop.aspect_ratio }};
      --image-filter: grayscale({{ _config.grayscale }}%);

    }
    .mode-light:root {
      --color-accent: {{ _config.colors.light.accent }};
      --background-color: {{ _config.colors.light.background_color }};
      --background-hover-color: {{ _config.colors.light.background_hover_color }};
      --blockqoute-color: {{ _config.colors.light.blockqoute_color }};
      --author-by-color: {{ _config.colors.light.author_by_color }};
      --border-color: {{ _config.colors.light.border_color }};
      --code-color: {{ _config.colors.light.code_color }};
      --code-background-color: {{ _config.colors.light.code_background_color }};
      --toc-border-color: {{ _config.colors.light.toc_border_color }};
      --highlight-color: {{ _config.colors.light.highlight_color }};
      --caption-color: {{ _config.colors.light.caption_color }};
      --search-background-color: {{ _config.colors.light.search_background_color }};
      --featured-color: {{ _config.colors.light.featured_color }};
    }
    .mode-dark:root {
      --color-accent: {{ _config.colors.dark.accent }};
      --background-color: {{ _config.colors.dark.background_color }};
      --background-hover-color: {{ _config.colors.dark.background_hover_color }};
      --blockqoute-color: {{ _config.colors.dark.blockqoute_color }};
      --author-by-color: {{ _config.colors.dark.author_by_color }};
      --heading-font-color: {{ _config.colors.dark.heading_font_color }};
      --link-color: {{ _config.colors.dark.link_color }};
      --link-color-hover: {{ _config.colors.dark.link_color_hover }};
      --border-color: {{ _config.colors.dark.border_color }};
      --code-color: {{ _config.colors.dark.code_color }};
      --code-background-color: {{ _config.colors.dark.code_background_color }};
      --toc-border-color: {{ _config.colors.dark.toc_border_color }};
      --highlight-color: {{ _config.colors.dark.highlight_color }};
      --caption-color: {{ _config.colors.dark.caption_color }};
      --search-background-color: {{ _config.colors.dark.search_background_color }};
      --featured-color: {{ _config.colors.dark.featured_color }};
    }
  </style>

  {{ _head | template }}

  <script src="{{ 'script.js' | asset_url }}"></script> 

</head>

<body>

{% include '_header.twig' %}

{% block body %}{% endblock %}

{% include '_search.twig' %}

{% include '_footer.twig' %}

{{ _foot | template }}
</body>