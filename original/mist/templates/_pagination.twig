<!-- begin pagination -->
<nav class="pagination" aria-label="{{ 'pagination' | lang }}">
  <div class="container">
    <div class="pagination-list">

      <a title="{{ 'previous_page' | lang }}" class="pagination-prev{% if not _pagination.page_prev %} disabled{% endif %}" href="{{ _pagination.page_prev | pagination_page_url }}">
       {{ 'previous_page' | lang }}
      </a>

      <span class="pagination-count">{{ 'page' | lang }} {{ _pagination.page }} {{ 'of' | lang }} {{ _pagination.pages }}</span>

      <a title="{{ 'next_page' | lang }}" class="pagination-next{% if not _pagination.page_next %} disabled{% endif %}" href="{{ _pagination.page_next | pagination_page_url }}">
          {{ 'next_page' | lang }}
      </a>

    </div>
  </div>
</nav>
<!-- end pagination -->